<% if @circles.empty?%>
<h3><%="Click on create a new circle to get started!" %></h3>
<% else %>
<h3>Here's all of your created circles:</h3>

<%@circles.each do |circle|%>
<h3><%=circle.title%></h3>
<ol>
  <li><b>YOU</b> - <%=circle.you%></li>
  <li><b>NEED</b> - <%=circle.need%></li>
  <li><b>GO</b> - <%=circle.go%></li>
  <li><b>SEARCH</b> - <%=circle.search%></li>
  <li><b>FIND</b> - <%=circle.find%></li>
  <li><b>TAKE</b> - <%=circle.take%></li>
  <li><b>RETURN</b> - <%=circle.return%></li>
  <li><b>CHANGE</b> - <%=circle.change%></li>
</ol>
<form class="" action="/circles/<%=circle.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Circle">
</form>
<form class="" action="/circles/<%=circle.id%>/edit" method="get">
<input type="submit" value="Edit">
</form>

<form class="" action="/circles" method="get">
<input type="submit" value="Back to Mainpage">
</form>
<%end%></br>

<a href="/circles/new">-Create a new Circle-</a><a href="/logout">-Logout-</a><a href="/users/<%=@user.slug%>">-Homepage-</a>
<%end%>
